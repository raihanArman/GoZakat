<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.zakat.InputZakatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Anda"
            android:textSize="20sp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raihan Arman"
            android:textSize="20sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#888585"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="NOMINAL"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_infaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:inputType="number"
            android:textSize="30sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#888585"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nawaitu an akhruja al-zakaata, au al-sodakota lillahi ta'ala"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#444343"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saya berniat mengeluarkan zakat dan atau sedekah karena Allah"
                android:fontFamily="@font/nunito"
                android:textColor="#444343"
                android:textSize="15sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_pilih_tanggal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal"
            android:background="@drawable/background_calculate"
            android:textColor="@color/colorPrimaryDark"
            android:backgroundTint="#FFC107"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_lanjut"
            android:layout_marginTop="10dp"
            android:layout_width="130dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="Lanjut"
            android:background="@drawable/background_calculate"
            android:textColor="@android:color/white"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>