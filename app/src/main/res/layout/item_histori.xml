<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A000000"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_jatuh_tempo"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jatuh tempo : 18 Desember 2019"
            android:textSize="15sp"
            android:textColor="#3F51B5"
            android:fontFamily="@font/nunito_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penerima : "
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/nunito_bold"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_mustahiq"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tv_nama_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tri sutrisno"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_jenis_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fakir Miskin"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_alamat_mustahiq"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat : Jalan Kumala h10"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_nominal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nominal : 10 Gram Emas"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_nama_masjid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masjid Jamiul Ihsan Makassar"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_distribusi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="Tanggal bayar : 30 Desember 2019"
            android:textColor="#3F51B5"
            android:textSize="15sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>