<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.zakat.InputZakatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Anda"
            android:textSize="20sp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raihan Arman"
            android:textSize="20sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#888585"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan jumlah zakat"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/lv_kalkulator"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/background_calculate"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/calculator"
                android:tint="#FFFFFF"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gunakan Kalkulator Zakat"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_nisab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="Nisab : Rp. 4.974.320"
            android:textColor="#4CAF50"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="NOMINAL"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/et_penghasilan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="30sp"
            android:text="0"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah zakat penghasilan yang akan dibayar"
            android:fontFamily="@font/nunito"
            android:textSize="15sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#888585"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Spinner
            android:layout_marginTop="20dp"
            android:id="@+id/sp_bulan"
            android:padding="8dp"
            android:hint="Bulan pembayaran"
            android:layout_width="200dp"
            android:layout_height="wrap_content"></Spinner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nawaitu an akhruja al-zakaata, au al-sodakota lillahi ta'ala"
                android:fontFamily="@font/nunito_bold"
                android:textColor="#444343"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saya berniat mengeluarkan zakat dan atau sedekah karena Allah"
                android:fontFamily="@font/nunito"
                android:textColor="#444343"
                android:textSize="15sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_lanjut"
            android:layout_marginTop="20dp"
            android:layout_width="130dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="Lanjut"
            android:background="@drawable/background_calculate"
            android:textColor="@android:color/white"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>