<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp">
    <RelativeLayout
        android:id="@+id/rv_masjid_container"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fm_1"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_masjid"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/bg_horizontal"/>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <TextView
            android:layout_below="@id/fm_1"
            android:id="@+id/tv_masjid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masjid Nurul Hijrah"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/nunito_bold"/>
        <TextView
            android:layout_below="@id/tv_masjid"
            android:id="@+id/tv_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jl. Pandang Raya"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/nunito"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>